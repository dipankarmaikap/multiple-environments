---
import BaseLayout from '~/layouts/BaseLayout.astro';
import { useStoryblok } from '@storyblok/astro';
import { isPreview } from '~/util';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

//set caching headers
if (!isPreview) {
  Astro.response.headers.set(
    'Cache-Control',
    's-maxage=60, stale-while-revalidate=0'
  );
  Astro.response.headers.set('Vercel-CDN-Cache-Control', 'max-age=60');
  Astro.response.headers.set('CDN-Cache-Control', 'max-age=60');
}
const { slug } = Astro.params;
const story = await useStoryblok(
  `cdn/stories/${slug || 'home'}`,
  {
    version: isPreview ? 'draft' : 'published',
    cv: new Date().getMilliseconds(),
  },
  {},
  Astro
);
---

<BaseLayout>
  <StoryblokComponent blok={story.content} />
</BaseLayout>
